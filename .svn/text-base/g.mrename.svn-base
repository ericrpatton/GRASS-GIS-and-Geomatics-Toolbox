#! /bin/bash
# 
# A bash batch script utility to rename non-SQL compliant filenames.

echo -e -n "\nEnter in map search string: "
read PATTERN

echo -e -n "\nEnter filename portion to be replaced (no quoting necessary): "
read OLDPART

echo -e -n "\nEnter string to substitute: "
read NEWPART

for MAP in $PATTERN ; do
	INPUT=$MAP
	OUTPUT=`echo $INPUT | tr "$OLDPART" "$NEWPART"`
	mv $INPUT $OUTPUT
	echo "Renamed $INPUT TO $OUTPUT."
done

exit 0
